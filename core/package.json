{
  "name": "@boolesai/tspec",
  "version": "1.2.0",
  "description": "Unified testing framework for test specification files (.tcase)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./parser": {
      "types": "./types/parser/index.d.ts",
      "import": "./dist/parser/index.js",
      "require": "./dist/parser/index.cjs"
    },
    "./assertion": {
      "types": "./types/assertion/index.d.ts",
      "import": "./dist/assertion/index.js",
      "require": "./dist/assertion/index.cjs"
    },
    "./runner": {
      "types": "./types/runner/index.d.ts",
      "import": "./dist/runner/index.js",
      "require": "./dist/runner/index.cjs"
    },
    "./scheduler": {
      "types": "./types/scheduler/index.d.ts",
      "import": "./dist/scheduler/index.js",
      "require": "./dist/scheduler/index.cjs"
    },
    "./plugin": {
      "types": "./types/plugin/index.d.ts",
      "import": "./dist/plugin/index.js",
      "require": "./dist/plugin/index.cjs"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "types": "tsc --emitDeclarationOnly",
    "package": "npm run types && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "prepublishOnly": "npm run package"
  },
  "keywords": [
    "testing",
    "dsl",
    "specification",
    "parser",
    "tspec",
    "api-testing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boolesai/testing-spec.git",
    "directory": "core"
  },
  "dependencies": {
    "@xmldom/xmldom": "^0.8.11",
    "axios": "^1.7.0",
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^7.2.0",
    "xpath": "^0.0.34"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.0.0",
    "@vitest/coverage-v8": "^2.1.9",
    "typescript": "^5.0.0",
    "vite": "^7.0.0",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "author": "Booles AI",
  "homepage": "https://github.com/boolesai/testing-spec#readme",
  "bugs": {
    "url": "https://github.com/boolesai/testing-spec/issues"
  },
  "publishConfig": {
    "access": "public"
  }
}
