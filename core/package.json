{
  "name": "@boolesai/tspec",
  "version": "0.0.1",
  "description": "Unified testing framework for test specification files (.tspec)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./parser": {
      "types": "./types/parser/index.d.ts",
      "import": "./dist/parser/index.js",
      "require": "./dist/parser/index.cjs"
    },
    "./assertion": {
      "types": "./types/assertion/index.d.ts",
      "import": "./dist/assertion/index.js",
      "require": "./dist/assertion/index.cjs"
    },
    "./runner": {
      "types": "./types/runner/index.d.ts",
      "import": "./dist/runner/index.js",
      "require": "./dist/runner/index.cjs"
    },
    "./scheduler": {
      "types": "./types/scheduler/index.d.ts",
      "import": "./dist/scheduler/index.js",
      "require": "./dist/scheduler/index.cjs"
    }
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "types": "tsc --emitDeclarationOnly",
    "test": "node --test test/**/*.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "testing",
    "dsl",
    "specification",
    "parser",
    "tspec",
    "api-testing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boolesai/testing-spec.git",
    "directory": "core"
  },
  "dependencies": {
    "axios": "^1.7.0",
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^7.2.0"
  },
  "devDependencies": {
    "vite": "^7.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/js-yaml": "^4.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
