{
  "name": "@boolesai/tspec-parser",
  "version": "2.0.0",
  "description": "DSL parser for test specification files (.tspec) with MCP server support",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./types/index.d.ts",
  "exports": {
    ".": {
      "types": "./types/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./mcp": {
      "import": "./dist/mcp-server.js"
    }
  },
  "bin": {
    "tspec-mcp-server": "./bin/mcp-server.js"
  },
  "files": [
    "dist",
    "types",
    "bin"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "types": "tsc --emitDeclarationOnly",
    "test": "node --test test/**/*.js",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "testing",
    "dsl",
    "specification",
    "parser",
    "tspec",
    "mcp",
    "model-context-protocol",
    "api-testing"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/boolesai/testing-spec.git",
    "directory": "parser"
  },
  "dependencies": {
    "js-yaml": "^4.1.0",
    "jsonpath-plus": "^7.2.0"
  },
  "devDependencies": {
    "vite": "^7.0.0",
    "typescript": "^5.0.0",
    "@types/node": "^22.0.0",
    "@types/js-yaml": "^4.0.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
