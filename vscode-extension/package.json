{
  "name": "vscode-tspec",
  "displayName": "Testing Spec",
  "description": "Language support and test runner for TSpec test specification files",
  "version": "0.0.2",
  "publisher": "boolesai",
  "repository": {
    "type": "git",
    "url": "https://github.com/boolesai/testing-spec.git",
    "directory": "vscode-extension"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Testing"
  ],
  "keywords": [
    "tspec",
    "testing",
    "api",
    "yaml"
  ],
  "activationEvents": [
    "onLanguage:tspec"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tspec",
        "aliases": [
          "TSpec",
          "tspec"
        ],
        "extensions": [
          ".tspec"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tspec",
        "scopeName": "source.tspec",
        "path": "./syntaxes/tspec.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "tspec",
        "path": "./snippets/tspec.json"
      }
    ],
    "commands": [
      {
        "command": "tspec.runTestFromCodeLens",
        "title": "Run TSpec Test",
        "category": "TSpec"
      },
      {
        "command": "tspec.showInTestExplorer",
        "title": "Show in Test Explorer",
        "category": "TSpec"
      },
      {
        "command": "tspec.refreshTests",
        "title": "Refresh Tests",
        "category": "TSpec"
      }
    ],
    "configuration": {
      "title": "TSpec",
      "properties": {
        "tspec.validation.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable TSpec validation"
        },
        "tspec.validation.strictMode": {
          "type": "boolean",
          "default": false,
          "description": "Enable strict validation mode"
        },
        "tspec.testing.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable TSpec test discovery and execution"
        },
        "tspec.testing.cliPath": {
          "type": "string",
          "default": "",
          "description": "Custom path to tspec CLI executable. Leave empty to auto-detect."
        },
        "tspec.testing.concurrency": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "maximum": 50,
          "description": "Maximum number of concurrent test executions"
        },
        "tspec.testing.defaultTimeout": {
          "type": "number",
          "default": 30,
          "minimum": 1,
          "description": "Default timeout in seconds for test execution"
        },
        "tspec.testing.watchMode": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh tests when .tspec files change"
        },
        "tspec.testing.envVars": {
          "type": "object",
          "default": {},
          "description": "Environment variables to pass to test execution",
          "additionalProperties": {
            "type": "string"
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "vite build",
    "watch": "vite build --watch",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext ts",
    "package": "vsce package"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.7.1",
    "typescript": "^5.0.0",
    "vite": "^7.3.1"
  }
}
