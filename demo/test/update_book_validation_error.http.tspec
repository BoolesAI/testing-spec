version: "1.0"
description: "Update book with invalid data returns 400"

metadata:
  prompt: |
    Test updating a book with invalid data.
    Verify that the API returns 400 error with proper validation
    error messages when price or inventory quantity are negative.
  related_code:
    - "src/controllers/books.ts"
    - "src/utils/validator.ts"
  test_category: "functional"
  risk_level: "medium"
  tags: ["books", "update", "validation", "error"]
  priority: "medium"
  timeout: "5s"

environment:
  name: "${ENV_NAME|local}"
  host: "${API_HOST|localhost:3000}"
  scheme: "http"

variables:
  book_id: 1

http:
  method: "PUT"
  path: "/api/v1/books/${book_id}"
  headers:
    Content-Type: "application/json"
    Accept: "application/json"
  body:
    json:
      price: -10
      inventoryQuantity: -5

assertions:
  - type: "status_code"
    expected: 400
  - type: "json_path"
    expression: "$.error"
    expected: "Validation Error"
  - type: "json_path"
    expression: "$.details"
    operator: "exists"
  - type: "response_time"
    max_ms: 1000
