version: "1.0"
description: "Delete an existing book"

metadata:
  ai_prompt: |
    Test deleting an existing book.
    Verify that the API successfully deletes a book and returns
    204 No Content status.
  related_code:
    - "src/controllers/books.ts"
    - "src/services/bookService.ts"
  test_category: "functional"
  risk_level: "high"
  tags: ["books", "delete"]
  priority: "high"
  timeout: "5s"

environment:
  name: "${ENV_NAME|local}"
  host: "${API_HOST|localhost:3000}"
  scheme: "http"

variables:
  book_id: 10

http:
  method: "DELETE"
  path: "/api/v1/books/${book_id}"
  headers:
    Accept: "application/json"

assertions:
  - type: "status_code"
    expected: 204
  - type: "response_time"
    max_ms: 2000
