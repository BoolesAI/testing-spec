version: "1.0"
description: "Get a non-existent book returns 404"

metadata:
  ai_prompt: |
    Test retrieving a non-existent book.
    Verify that the API returns 404 error with proper error
    message when trying to get a book that doesn't exist.
  related_code:
    - "src/controllers/books.ts"
    - "src/services/bookService.ts"
  test_category: "functional"
  risk_level: "medium"
  tags: ["books", "get", "error", "404"]
  priority: "medium"
  timeout: "5s"

environment:
  name: "${ENV_NAME|local}"
  host: "${API_HOST|localhost:3000}"
  scheme: "http"

variables:
  book_id: 99999

http:
  method: "GET"
  path: "/api/v1/books/${book_id}"
  headers:
    Accept: "application/json"

assertions:
  - type: "status_code"
    expected: 404
  - type: "json_path"
    expression: "$.error"
    expected: "Not Found"
  - type: "json_path"
    expression: "$.message"
    operator: "exists"
  - type: "response_time"
    max_ms: 1000
